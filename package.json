{
    "name": "media-downloader",
    "version": "0.0.0",
    "description": "A react-based electron desktop app for downloading youtube video and audio",
    "author": "Brandon Porter <brandon.porter18@gmail.com>",
    "license": "ISC",
    "main": "main.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Slushy/media-downloader.git"
    },
    "scripts": {
        "build": "npm-run-all clean -p build:*",
        "build:desktop": "webpack --config webpack.config.desktop.js --colors",
        "build:web": "webpack --config webpack.config.web.js --colors",
        "clean": "rimraf dist/",
        "start": "electron dist/main.js"
    },
    "devDependencies": {
        "electron": "^1.8.4",
        "html-webpack-plugin": "^3.2.0",
        "npm-run-all": "^4.1.2",
        "rimraf": "^2.6.2",
        "webpack": "^4.6.0",
        "webpack-cli": "^2.0.15",
        "webpack-merge": "^4.1.2"
    }
}
